<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MakeDiagnoseActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="608dp"
        android:layout_above="@+id/ib_subRequest"
        android:layout_marginBottom="23dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="165dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/make_diagnose" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:minHeight="41dp"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <!-- android:background="@drawable/item_bg"-->

                <TextView
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Click button to upload photo and get diagnose"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_bg"
                android:minHeight="41dp"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/diagnose_eye_image"
                    android:layout_width="153dp"
                    android:layout_height="162dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eye_test" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_bg"
                android:minHeight="41dp"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="center"
                    android:text="Level"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/diagnose_level"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical"
                    android:textColor="#333"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/ib_subRequest"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="Upload Photo &amp; Make Diagnose"
        android:textColor="#fff"
        android:textSize="17dp" />

</RelativeLayout>